<configuration>

  <system.webServer>    

    <!-- indicates that the hello.js file is a node.js application to be handled by the iisnode module -->
    <handlers>
      <add name="iisnode" path="app.js" verb="*" modules="iisnode"/>
    </handlers>

    <iisnode nodeProcessCommandLine="&quot;C:\Program Files (x86)\nodejs\node.exe&quot;" />

    <!-- exclude node_modules directory and subdirectories from serving by IIS since these are implementation details of node.js applications -->

    <security>
     <requestFiltering>
       <hiddenSegments>
         <add segment="node_modules" />
       </hiddenSegments>
     </requestFiltering>
    </security>           

  </system.webServer>

</configuration>